    function shuffleArray(array) {
      for (let i = array.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [array[i], array[j]] = [array[j], array[i]];
      }
      return array;
    }

    function addAlert() {
      const shuffled = shuffleArray([...alerts]);
      const alert = shuffled[Math.floor(Math.random() * shuffled.length)];

      const line = document.createElement("div");
      line.classList.add("line");
      line.textContent = alert;
      terminal.appendChild(line);

      if (terminal.children.length > 25) {
        terminal.removeChild(terminal.firstChild);
      }

      if (alert.includes("CRITICAL") || alert.includes("BREACH") || alert.includes("ALERT")) {
        flash.classList.remove("flash");
        void flash.offsetWidth; // Restart animation trick
        flash.classList.add("flash");
      }
    }

    // Wait until typing finishes, then start alerts
    setTimeout(() => {
      typing.style.display = "none";
      setInterval(addAlert, 500);
