    <script>
        // Create matrix background effect
        function createMatrixBg() {
            const matrixBg = document.getElementById('matrixBg');
            const characters = '01010101010101010101010101010101ARIAN$#%&@!';
            const columns = Math.floor(window.innerWidth / 20);
            
            for (let i = 0; i < columns; i++) {
                const column = document.createElement('div');
                column.style.position = 'absolute';
                column.style.top = '0';
                column.style.left = (i * 20) + 'px';
                column.style.width = '20px';
                column.style.color = '#00ff00';
                column.style.fontSize = '16px';
                column.style.wordBreak = 'break-all';
                column.style.textAlign = 'center';
                column.style.animation = `matrix-flow ${Math.random() * 5 + 3}s linear infinite`;
                column.style.animationDelay = Math.random() * 5 + 's';
                
                let content = '';
                for (let j = 0; j < 50; j++) {
                    content += characters.charAt(Math.floor(Math.random() * characters.length)) + '<br>';
                }
                
                column.innerHTML = content;
                matrixBg.appendChild(column);
            }
            
            // Add the matrix-flow animation
            const style = document.createElement('style');
            style.innerHTML = `
                @keyframes matrix-flow {
                    0% { transform: translateY(-100%); }
                    100% { transform: translateY(100vh); }
                }
            `;
            document.head.appendChild(style);
        }
        
        // Array of error messages
        const errorMessages = [
            "FIREWALL BYPASSED",
            "DATABASE COMPROMISED",
            "ENCRYPTION KEYS STOLEN",
            "ROOT ACCESS OBTAINED",
            "ADMIN PRIVILEGES ESCALATED",
            "SYSTEM BACKDOOR INSTALLED",
            "NETWORK SECURITY BREACHED",
            "USER CREDENTIALS HARVESTED",
            "SECURITY PROTOCOLS DISABLED",
            "INTRUSION DETECTION FAILED",
            "MALWARE INJECTION SUCCESSFUL",
            "DATA EXFILTRATION IN PROGRESS",
            "SECURE BOOT COMPROMISED",
            "BIOS FIRMWARE ALTERED",
            "SYSTEM LOGS CLEARED",
            "SECURITY CAMERAS DISABLED",
            "AUTHENTICATION SERVER PENETRATED",
            "NETWORK TRAFFIC INTERCEPTED",
            "CRYPTOGRAPHY ALGORITHMS CRACKED",
            "SURVEILLANCE SYSTEMS HIJACKED",
            "ACCESS CONTROL LISTS MODIFIED",
            "SECURITY CERTIFICATES REVOKED",
            "DNS RECORDS POISONED",
            "PROXY SERVERS COMPROMISED",
            "SECURE SHELL TUNNEL CREATED",
            "FIREWALL RULES DELETED",
            "SECURITY TOKEN DUPLICATED",
            "TWO-FACTOR AUTHENTICATION BYPASSED",
            "PASSWORD HASHES CRACKED",
            "SECURE CONNECTION INTERCEPTED",
            "NETWORK SEGMENTATION FAILED",
            "SECURE ELEMENT BREACHED",
            "TRUSTED PLATFORM MODULE COMPROMISED",
            "VIRTUALIZATION SECURITY BYPASSED",
            "CONTAINER ESCAPE DETECTED"
        ];
        
        // Function to display alerts one by one
        function displayAlerts() {
            const alertList = document.getElementById('alertList');
            let i = 0;
            
            function addAlert() {
                if (i < errorMessages.length) {
                    const li = document.createElement('li');
                    li.className = 'alert';
                    li.textContent = `[!] ${errorMessages[i]}`;
                    alertList.appendChild(li);
                    
                    // Scroll to bottom
                    alertList.parentElement.scrollTop = alertList.parentElement.scrollHeight;
                    
                    i++;
                    setTimeout(addAlert, 800);
                } else {
                    // Restart from the beginning
                    setTimeout(() => {
                        alertList.innerHTML = '';
                        i = 0;
                        addAlert();
                    }, 3000);
                }
            }
            
            addAlert();
        }
        
        // Initialize the page
        window.onload = function() {
            createMatrixBg();
            displayAlerts();
        };
    </script>
