  <script>
    // Matrix Rain Animation with optimized performance
    (function() {
      const canvas = document.getElementById('matrix-canvas');
      const ctx = canvas.getContext('2d');
      let animationId;
      let lastTime = 0;
      const fps = 15; // Reduced from 20 to 15 FPS
      const fpsInterval = 1000 / fps;
      
      function resizeCanvas() {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
      }
      
      resizeCanvas();
      window.addEventListener('resize', resizeCanvas);
      
      const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789@#$%^&*()_+-=[]{}|;:,.<>?';
      const fontSize = 16;
      let columns = Math.floor(canvas.width / fontSize);
      let drops = Array(columns).fill(1);
      
      function drawMatrix(timestamp) {
        if (!lastTime) lastTime = timestamp;
        const deltaTime = timestamp - lastTime;
        
        if (deltaTime > fpsInterval) {
          lastTime = timestamp - (deltaTime % fpsInterval);
          
          ctx.fillStyle = 'rgba(0, 0, 0, 0.05)';
          ctx.fillRect(0, 0, canvas.width, canvas.height);
          ctx.fillStyle = '#00ff00';
          ctx.font = `${fontSize}px monospace`;
          
          for (let i = 0; i < drops.length; i++) {
            const text = chars[Math.floor(Math.random() * chars.length)];
            ctx.fillText(text, i * fontSize, drops[i] * fontSize);
            drops[i] = drops[i] > canvas.height / fontSize || Math.random() > 0.975 ? 0 : drops[i] + 1;
          }
        }
        
        animationId = requestAnimationFrame(drawMatrix);
      }
      
      // Start animation
      animationId = requestAnimationFrame(drawMatrix);
      
      // Cleanup on page hide
      window.addEventListener('visibilitychange', () => {
        if (document.hidden) {
          cancelAnimationFrame(animationId);
        } else {
          animationId = requestAnimationFrame(drawMatrix);
        }
      });
    })();
    
    // Console-style messages instead of annoying alerts
    (function() {
      const consoleElement = document.getElementById('console');
      const messages = [
        "> Initiating breach protocol...",
        "> Firewall bypassed successfully.",
        "> Intrusion detection systems disabled.",
        "> Admin panel hijacked.",
        "> Database access granted.",
        "> User credentials compromised.",
        "> Encrypting sensitive files...",
        "> Ransomware deployed.",
        "> Backdoor installed for persistent access.",
        "> Network traffic rerouted.",
        "> Root privileges obtained.",
        "> System logs erased.",
        "> Malware injection complete.",
        "> All defenses neutralized. System under control."
      ];
      
      let messageIndex = 0;
      
      function addConsoleMessage() {
        if (messageIndex < messages.length) {
          const messageElement = document.createElement('div');
          messageElement.className = 'console-line';
          messageElement.textContent = messages[messageIndex];
          messageElement.style.animationDelay = (messageIndex * 200) + 'ms';
          consoleElement.appendChild(messageElement);
          consoleElement.scrollTop = consoleElement.scrollHeight;
          
          messageIndex++;
          setTimeout(addConsoleMessage, 500);
        }
      }
      
      // Start after a short delay
      setTimeout(addConsoleMessage, 1000);
    })();
  </script>
